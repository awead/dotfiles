#!/bin/bash

ACTION=$1
CONNECTED=`scutil --nc status "LIAS VPN" | grep -c "Connected"`

if [ -z $1 ]; then
  echo "Use one of the following commands for scutil --nc"
  `scutil --nc help`
  exit 1;
fi

if [ $1 = 'start' ]; then
  if [ $CONNECTED -ne 0 ]; then
    echo "Alreday conected"
    exit 0;
  fi
  scutil --nc start "LIAS VPN"
else
  scutil --nc $1 "LIAS VPN"
fi
