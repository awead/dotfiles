[user]
	name = Adam Wead
	email = amsterdamos@gmail.com
	signingkey = 26B15197
[commit]
	gpgsign = true
	template = ~/.gitmessage
[credential]
	helper = osxkeychain
[core]
	excludesfile = /Users/awead/.gitignore
	editor = vim
[alias]
	quick-stats = ! $HOME/.dotfiles/bin/git-quick-stats
	d = difftool
	sla = log --oneline --decorate --graph --all
	lp = log --pretty=format:' %cd : %s [%cn]' --date=short
	lpc = log --pretty=format:'%C(yellow)%h%C(reset) - %an [%C(green)%ar%C(reset)] %s'
	glog = log -E -i --grep
  aa = add --all
  ap = add --patch
  b = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  co = checkout
  p = push -u
  pf = push -u --force-with-lease
  st = status
  s = stash -u
  mup = !git checkout master && git pull && git checkout -
  mupr = !git checkout master && git pull && git checkout - && git rebase master
  dup = !git checkout develop && git pull && git checkout -
  dupr = !git checkout develop && git pull && git checkout - && git rebase develop
  roll = !git add --all && git commit --amend --no-edit && bundle exec rubocop -a
  ca = !git commit --amend && bundle exec rubocop -a
  car = !git commit --amend --no-edit && bundle exec rubocop -a
  ci = !git commit -v && bundle exec rubocop -a
  wipit = !git add --all && git commit -m"wip" && bundle exec rubocop -a
[diff]
	tool = vimdiff
[merge]
	tool = extMerge
	ff = only
[mergetool "extMerge"]
	cmd = extMerge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
	trustExitCode = false
[difftool]
	prompt = false
[push]
  default = current
[fetch]
  prune = true
